<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        style="@style/CategoryLabelStyle"
        android:text="Coffee drink" />

    <ImageView
        android:id="@+id/edit_drink_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:focusable="false"
        tools:src="@tools:sample/avatars" />

    <TextView
        style="@style/FieldLabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title" />

    <EditText
        android:id="@+id/edit_drink_title"
        style="@style/FieldValueEditorStyle"
        android:hint="Coffee drink title"
        android:inputType="textCapWords"
        tools:text="Latte" />

    <TextView
        style="@style/FieldLabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description" />

    <EditText
        android:id="@+id/edit_drink_description"
        style="@style/FieldValueEditorStyle"
        android:hint="Coffee drink description"
        android:inputType="text"
        tools:text="Also called a café latte, this drink is a single shot of espresso with three parts steamed milk. It is usually bigger than a cappuccino because it contains more milk and can be ordered with flavoring – usually vanilla, hazelnut or caramel" />

</LinearLayout>
